<?xml version="1.0" encoding="UTF-8"?>

<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
    
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
	
	<screen id="start" controller="mygame.GUI.MainMenuController" >
	
		<layer id="background" childLayout="center" backgroundColor="#ffffffff" >
			
		</layer>
	
		<layer id="foreground" childLayout="vertical" >
			<panel id="top_third" childLayout="center" width="100%" height="33%" >
				<text text="Networking" font="Interface/Fonts/Arial.fnt" color="#000000ff" width="100%" height="100%" />
			</panel>
			
			<panel id="middle_third" childLayout="horizontal" width="100%" height="33%" >
				<panel id="middle_third_left" childLayout="center" width="50%" height="*" >
					<control name="button" label="Create and connect to local server" id="create_local_server" width="100%" align="center" valign="center" >
						<interact onClick="buttonClick(create_local_server)" />
					</control>
				</panel>
				
				<panel id="middle_third_right" childLayout="vertical" width="50%" height="*" >
					<control name="label" color="#000000ff" text="Server IP:" width="100%" align="left" valign="top" />
					<control name="textfield" id="input_server_ip" align="left" valign="center" />
					<control name="button" label="Connect to server" id="connect_to_server" align="center" valign="bottom" >
						<interact onClick="buttonClick(connect_to_server)" />
					</control>
				</panel>
			</panel>
			
			<panel id="bottom_third" childLayout="center" width="100%" height="*" >
				<control name="button" label="Exit" id="exit" align="center" valign="center" >
					<interact onClick="buttonClick(exit)" />
				</control>
			</panel>
			
		</layer>
	
	</screen>
	
</nifty>